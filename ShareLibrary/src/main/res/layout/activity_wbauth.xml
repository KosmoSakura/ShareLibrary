<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/tv_sina_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="26px"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="cdacbiuad:"
        android:textSize="69px"/>

    <ImageView
        android:id="@+id/iv_sina_img"
        android:layout_width="500px"
        android:layout_height="400px"
        android:background="#008000"
        android:layout_below="@id/tv_sina_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26px"
        />

    <TextView
        android:id="@+id/tv_sina_msg"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_sina_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26px"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="cdacbiuad"
        android:textSize="50px"/>
    <TextView
        android:id="@+id/tv_sina_url"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sina_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26px"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="cdacbiuad"
        android:textSize="50px"/>

    <TextView
        android:id="@+id/tv_sina_sure"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_below="@id/tv_sina_url"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26px"
        android:gravity="center"
        android:text="确认分享"
        android:background="@drawable/shape_circular_yellow"
        android:textSize="50px"/>

</RelativeLayout>